<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#022506">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#064508">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="176dp"
                android:layout_height="88dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/smksa" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="Smk Syafi'i Akrom Kota Pekalongan"
                android:textColor="#FAF6F6"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:background="#0D854D"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#D7DDE6E2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/bkk" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="bottom|center_horizontal"
                            android:text="Bkk"
                            android:textColor="#090909"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#D7DDE6E2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/data_guru" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="bottom|center_horizontal"
                            android:text="Data Guru"
                            android:textColor="#100E0E"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#D7DDE6E2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/learn" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="bottom|center_horizontal"
                            android:text="Jurusan"
                            android:textColor="#040303"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#D7DDE6E2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="bottom|center_horizontal"
                            android:text="Lokasi Sekolah"
                            android:textColor="#020202"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/placeholder" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#D7DDE6E2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/tracking" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="bottom|clip_horizontal"
                            android:text="Aktivitas"
                            android:textColor="#101010"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#D7DDE6E2"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/calendar" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="bottom|center_horizontal"
                            android:text="Jadwal Pelajaran"
                            android:textColor="#101010"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>